{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": false,
        "trailing-comma": false,
        "object-literal-sort-keys": true,
        "quotemark": [
            false,
            "single"
        ],
        "prettier": [
            true,
            {
              "singleQuote": true,
              "semi": false
            }
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}